<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <import resource="../persistence/persistence-config-context.xml"/>

    <!-- ######################## JOB: PIRSF version 2.74 ############################  -->
    <bean id="jobPIRSF-2.74" class="uk.ac.ebi.interpro.scan.management.model.Job">
        <property name="description"
                  value="The PIRSF concept is being used as a guiding principle to provide comprehensive and non-overlapping clustering of UniProtKB sequences into a hierarchical order to reflect their evolutionary relationships."/>
        <property name="analysis" value="true"/>
    </bean>

    <bean id="abstractPIRSFStep-2.74" abstract="true" class="uk.ac.ebi.interpro.scan.management.model.Step">
        <property name="job" ref="jobPIRSF-2.74"/>
        <property name="maxProteins" value="${analysis.max.sequence.count.PIRSF}"/>
        <property name="createStepInstancesForNewProteins" value="true"/>
        <property name="retries" value="0"/>
        <property name="nfsDelayMilliseconds" value="${nfs.delay.milliseconds}"/>
    </bean>

    <!-- STEP 1 -->
    <bean id="stepPIRSFWriteFasta-2.74"
          class="uk.ac.ebi.interpro.scan.management.model.implementations.WriteFastaFileStep"
          parent="abstractPIRSFStep-2.74">
        <property name="stepDescription" value="Create FASTA file."/>
        <property name="fastaFileNameTemplate" ref="fastaFileNameTemplate"/>
        <property name="proteinDAO" ref="proteinDAO"/>
    </bean>

    <!-- STEP 2 -->
    <bean id="stepPIRSFRunBinary-2.74"
          class="uk.ac.ebi.interpro.scan.management.model.implementations.hmmer.RunHmmerBinaryStep"
          parent="abstractPIRSFStep-2.74">
        <!-- In example command line below, replace _ with -
        /ebi/production/interpro/binaries/64_bit_Linux/hmmpfam  -A 0 _-cpu 1 _-acc -E 0.01 /ebi/sp/pro1/interpro/data/members/pirsf/274/sf_hmm.bin  -->
        <property name="dependsUpon" ref="stepPIRSFWriteFasta-2.74"/>
        <property name="stepDescription" value="Run Hmmer2 Binary for selected proteins"/>
        <property name="fullPathToBinary" value="${binary.hmmer2.hmmpfam.path}"/>
        <property name="binarySwitches" value="-A 0 --cpu 1 --acc -E 0.01"/>
        <property name="outputFileNameTemplate" ref="rawAnalaysisOutputFileTemplate"/>
        <property name="fastaFileNameTemplate" ref="fastaFileNameTemplate"/>
        <property name="retries" value="3"/>
        <property name="fullPathToHmmFile" value="${pirsf.hmm.bin.path.2.74}"/>
    </bean>

    <bean id="stepPIRSFStoreRawMatches-2.74"
          class="uk.ac.ebi.interpro.scan.management.model.implementations.pirsf.ParsePIRSFHmmpfamOutputStep"
          parent="abstractPIRSFStep-2.74">
        <property name="dependsUpon" ref="stepPIRSFRunBinary-2.74"/>
        <property name="stepDescription" value="Parse the HMMER 2 binary output and store as raw matches."/>
        <property name="hmmerOutputFileNameTemplate" ref="rawAnalaysisOutputFileTemplate"/>
        <property name="rawMatchDAO" ref="pirsfRawMatchDAO-2.74"/>
        <property name="serialGroup" value="PARSE_PIRSF"/>
        <property name="parser" ref="pirsfHmmPfamParser-2.74"/>
    </bean>

    <bean id="stepPIRSFDeleteRawOutput-2.74"
          class="uk.ac.ebi.interpro.scan.management.model.implementations.DeleteFileStep"
          parent="abstractPIRSFStep-2.74">
        <property name="dependsUpon" ref="stepPIRSFStoreRawMatches-2.74"/>
        <property name="stepDescription"
                  value="Delete the raw output file following successful parsing and persistence"/>
        <property name="fileNameTemplate" ref="rawAnalaysisOutputFileTemplate"/>
    </bean>

    <!--<bean id="stepPIRSFRawData_TEST-2.74"-->
          <!--class="uk.ac.ebi.interpro.scan.management.model.implementations.test.TestRawDataStoredStep"-->
          <!--parent="abstractPIRSFStep-2.74">-->
        <!--<property name="dependsUpon" ref="stepPIRSFStoreRawMatches-2.74"/>-->
        <!--<property name="stepDescription" value="Test raw matches"/>-->
        <!--<property name="rawMatchDAO" ref="rawMatchDAO_TEST-2.74"/>-->
    <!--</bean>-->

    <bean id="stepPIRSFPostProcessing-2.74"
          class="uk.ac.ebi.interpro.scan.management.model.implementations.pirsf.PIRSFPostProcessingStep"
          parent="abstractPIRSFStep-2.74">
        <property name="dependsUpon" ref="stepPIRSFStoreRawMatches-2.74"/>
        <property name="signatureLibraryRelease" value="2.74"/>
        <property name="stepDescription" value="Stores raw matches as filtered matches."/>
        <property name="filteredMatchDAO" ref="pirsfFilteredMatchDAO-2.74"/>
        <property name="serialGroup" value="PIRSF_POST_PROCESSING"/>
        <property name="rawMatchDAO" ref="pirsfRawMatchDAO-2.74"/>
        <property name="postProcessor" ref="pirsfPostProcessor-2.74"/>
        <property name="proteinDAO" ref="proteinDAO"/>
        <property name="fastaFileNameTemplate" ref="fastaFileNameTemplate"/>
     </bean>

    <bean id="stepPIRSFDeleteFastaFile-2.74"
          class="uk.ac.ebi.interpro.scan.management.model.implementations.DeleteFileStep"
          parent="abstractPIRSFStep-2.74">
        <property name="dependsUpon" ref="stepPIRSFPostProcessing-2.74"/>
        <property name="stepDescription" value="Delete the fasta file following successful run of FPS"/>
        <property name="fileNameTemplate" ref="fastaFileNameTemplate"/>
    </bean>

    <!-- !!!!!!!!!!!!!!!!!!!!! JOB-END: PIRSF !!!!!!!!!!!!!!!!!!!!!!!!!!!!  -->

    <!-- ######################## Dependencies ############################  -->

    <bean id="pirsfRawMatchDAO-2.74"
          class="uk.ac.ebi.interpro.scan.persistence.raw.RawMatchDAOImpl">
        <constructor-arg value="uk.ac.ebi.interpro.scan.model.raw.PIRSFHmmer2RawMatch"/>
    </bean>

    <bean id="rawMatchDAO_TEST-2.74"
          class="uk.ac.ebi.interpro.scan.genericjpadao.GenericDAOImpl">
        <constructor-arg value="uk.ac.ebi.interpro.scan.model.raw.RawMatch"/>
    </bean>

    <bean id="pirsfFilteredMatchDAO-2.74"
          class="uk.ac.ebi.interpro.scan.persistence.PirsfHmmer2FilteredMatchDAOImpl"/>

    <bean id="pirsfHmmPfamParser-2.74" class="uk.ac.ebi.interpro.scan.io.match.hmmer.hmmer2.HmmPfamParser">
        <property name="signatureLibrary" value="PIRSF"/>
        <property name="signatureLibraryRelease" value="2.74"/>
        <property name="hmmer2ParserSupport" ref="pirsfParserSupport-2.74"/>
    </bean>

    <bean id="pirsfParserSupport-2.74"
          class="uk.ac.ebi.interpro.scan.io.match.hmmer.hmmer2.PirsfHmmer2ParserSupport">
        <property name="signatureLibraryRelease" value="2.74"/>
    </bean>

    <bean id="pirsfPostProcessor-2.74" class="uk.ac.ebi.interpro.scan.business.postprocessing.pirsf.PirsfPostProcessing">
        <property name="pirsfDatFileParser" ref="pirsfDatParser-2.74"/>
        <property name="pirsfDatFileResource" value="file:${pirsf.dat.path.2.74}"/>
        <property name="sfTbFileParser" ref="sfTbParser-2.74"/>
        <property name="sfTbFileResource" value="file:${pirsf.sf.tb.path.2.74}"/>
        <property name="binaryRunner" ref="blastRunner-2.74"/>
        <property name="blastDbFileResource" value="file:${pirsf.sf.seq.path.2.74}"/>
    </bean>

    <bean id="pirsfDatParser-2.74" class="uk.ac.ebi.interpro.scan.io.pirsf.PirsfDatFileParser"/>

    <bean id="sfTbParser-2.74" class="uk.ac.ebi.interpro.scan.io.pirsf.SfTbFileParser"/>

    <!-- Needed to run PIRSF Blast -->
    <bean id="blastRunner-2.74" class="uk.ac.ebi.interpro.scan.business.binary.SimpleBinaryRunner">
         <property name="binary" value="./blastall"/>
         <property name="deleteTemporaryFiles" value="true"/>
         <property name="arguments"
                   value="-p blastp -F F -e 0.0005 -b 300 -v 300 -m 8"/>
         <property name="commandLineConversation">
             <bean class="uk.ac.ebi.interpro.scan.io.cli.CommandLineConversationImpl">
             </bean>
         </property>
         <property name="binaryPath" value="file:bin"/>
     </bean>

     <!--<bean id="blastInputFile-2.74" class="org.springframework.core.io.ClassPathResource">-->
         <!--<constructor-arg value="uk/ac/ebi/interpro/scan/business/postprocessing/pirsf/test_proteins.fasta"/>-->
     <!--</bean>-->

     <!--<bean id="blastDbResource-2.74" class="org.springframework.core.io.ClassPathResource">-->
         <!--<constructor-arg value="uk/ac/ebi/interpro/scan/business/postprocessing/pirsf/blastdb/sf.seq"/>-->
     <!--</bean>-->

    <!-- !!!!!!!!!!!!!!!!!!!!! Dependencies-END !!!!!!!!!!!!!!!!!!!!!!!!!!!!  -->

</beans>

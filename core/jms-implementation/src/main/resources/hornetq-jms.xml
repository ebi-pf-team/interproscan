<configuration xmlns="urn:hornetq"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="urn:hornetq ../../../schemas/hornetq-jms.xsd">
    <!--the connection factory used by the example-->
    <connection-factory name="ConnectionFactory">
        <connectors>
            <connector-ref connector-name="netty-connector"/>
        </connectors>

        <entries>
            <entry name="ConnectionFactory"/>
        </entries>

        <!-- Turned off buffering of messages on the client side. -->
        <!--<consumer-window-size>0</consumer-window-size>-->
    </connection-factory>

    <queue name="${mvn.worker.job.request.queue}">
        <entry name="jms.queue.${mvn.worker.job.request.queue}"/>
    </queue>

    <queue name="${mvn.worker.job.response.queue}">
        <entry name="jms.queue.${mvn.worker.job.response.queue}" />
    </queue>

    <topic name="${mvn.worker.manager.topic}">
        <entry name="jms.topic.${mvn.worker.manager.topic}"/>
    </topic>

    <queue name="${mvn.worker.manager.response.queue}">
        <entry name="jms.queue.${mvn.worker.manager.response.queue}"/>
    </queue>


</configuration>

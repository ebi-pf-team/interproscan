        <profile>
            <!-- Copy this profile into your own [HOME]/.m2/settings.xml file, rename and
             edit appropriately. Use with "mvn -P profile-id GOAL" -->
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <dependencies>
                <dependency>
                    <groupId>hsqldb</groupId>
                    <artifactId>hsqldb</artifactId>
                    <version>${hsqldb.version}</version>
                </dependency>
            </dependencies>

            <properties>

                <test.database.driver>org.hsqldb.jdbcDriver</test.database.driver>
                <test.connection.url>jdbc:hsqldb:mem:mem:testmodel</test.connection.url>
                <test.username>sa</test.username>
                <test.password></test.password>
                <test.hibernate.dialect>org.hibernate.dialect.HSQLDialect</test.hibernate.dialect>
                <test.hibernate.show_sql>true</test.hibernate.show_sql>
                <test.hibernate.format_sql>true</test.hibernate.format_sql>
                <test.hibernate.hbm2ddl.auto>update</test.hibernate.hbm2ddl.auto>
                <test.hibernate.default_schema>testmodel</test.hibernate.default_schema>
                <test.hibernate.jdbc.batch.size>30</test.hibernate.jdbc.batch.size>
                <test.hibernate.use_sql_comments>true</test.hibernate.use_sql_comments>

                <broker.bindings.directory>target/data/bindings</broker.bindings.directory>
                <broker.journal.directory>target/data/journal</broker.journal.directory>
                <broker.large.messages.directory>target/data/largemessages</broker.large.messages.directory>
                <broker.paging.directory>target/data/paging</broker.paging.directory>
                <broker.host.name>localhost</broker.host.name>
                <broker.port.number>5445</broker.port.number>
                <unix.username>mumdad</unix.username>
                <lsf.notification.emailaddress>pjones@ebi.ac.uk</lsf.notification.emailaddress>

                <!-- You can rename the queues to anything you like-->
                <job.submission.queue>job_submission_queue</job.submission.queue>
                <worker.job.request.queue>worker_job_request_queue</worker.job.request.queue>
                <worker.job.response.queue>worker_job_response_queue</worker.job.response.queue>
                <worker.manager.topic>worker_manager_topic</worker.manager.topic>
                <worker.manager.response.queue>worker_manager_response_queue</worker.manager.response.queue>

            </properties>
        </profile>


    </profiles>

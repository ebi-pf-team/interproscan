<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean name="entryHierarchy" class="uk.ac.ebi.interpro.scan.web.io.EntryHierarchy" init-method="init"
          scope="singleton">
        <property name="entryColourPropertiesFile">
            <util:properties location="classpath:/data/entry_colours.properties"/>
        </property>
        <property name="entryHierarchyDataResource" ref="entryHierarchyResource" />
        <property name="entryHierarchyDataResourceReader" ref="entryHierarchyReader" />
    </bean>

    <bean id="entryHierarchyReader" class="uk.ac.ebi.interpro.scan.web.io.EntryHierarchyDataResourceReader"/>

    <bean id="entryHierarchyResource" class="org.springframework.core.io.ClassPathResource">
        <constructor-arg value="data/ParentChildTreeFile.txt"/>
    </bean>

 </beans>

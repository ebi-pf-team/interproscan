<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <!-- JPA Persistence unit for local testing in HSQLDB - current in-memory database, but may change. -->
    <persistence-unit name="testPersistence" transaction-type="RESOURCE_LOCAL">
        
        <description>
            Test persistence-unit that uses an in-memory HSQLDB database.
        </description>

        <!-- Abstract classes -->
        <class>uk.ac.ebi.interpro.scan.model.Location</class>
        <class>uk.ac.ebi.interpro.scan.model.Match</class>
        <class>uk.ac.ebi.interpro.scan.model.RawMatch</class>
        <class>uk.ac.ebi.interpro.scan.model.FilteredMatch</class>
        <class>uk.ac.ebi.interpro.scan.model.SequenceIdentifier</class>

        <!-- Concrete Locations. -->
        <class>uk.ac.ebi.interpro.scan.model.FingerPrintsLocation</class>
        <class>uk.ac.ebi.interpro.scan.model.HmmLocation</class>
        <class>uk.ac.ebi.interpro.scan.model.BlastProDomLocation</class>

        <!-- Concrete Matches -->
        <class>uk.ac.ebi.interpro.scan.model.RawFingerPrintsMatch</class>
        <class>uk.ac.ebi.interpro.scan.model.RawHmmMatch</class>
        <class>uk.ac.ebi.interpro.scan.model.FilteredFingerPrintsMatch</class>
        <class>uk.ac.ebi.interpro.scan.model.FilteredHmmMatch</class>

        <class>uk.ac.ebi.interpro.scan.model.Protein</class>
        <class>uk.ac.ebi.interpro.scan.model.Model</class>
        <class>uk.ac.ebi.interpro.scan.model.XrefSequenceIdentifier</class>
        <class>uk.ac.ebi.interpro.scan.model.MD5SequenceIdentifier</class>
        <class>uk.ac.ebi.interpro.scan.model.Signature</class>
        <class>uk.ac.ebi.interpro.scan.model.SignatureProvider</class>
        <class>uk.ac.ebi.interpro.scan.model.SignatureDatabaseRelease</class>

        <properties>
            <property name="hibernate.show_sql"         value="true" />
            <property name="hibernate.format_sql"       value="true" />
            <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
            <property name="hibernate.connection.url"   value="jdbc:hsqldb:mem:mem:testmodel" />
            <property name="hibernate.connection.username" value="sa" />
            <property name="hibernate.dialect"          value="org.hibernate.dialect.HSQLDialect" />
            <property name="hibernate.hbm2ddl.auto"     value="create" />
        </properties>

    </persistence-unit>

</persistence>
